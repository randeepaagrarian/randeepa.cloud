<!DOCTYPE html>
<html>
    <head>
        <% include ./layouts/pro/head %>
    </head>
    <body>
        <div class="wrapper">
            <% include ./layouts/pro/sidebar %>
            <div class="main-panel">
                <% include ./layouts/pro/navbar %>

                <div class="main-content">
                    <div class="container-fluid">


                        <div class="row">

                            <% if(user.accessLevel.service == 8) { %>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title"><%= title %></h4>
                                        </div>
                                        <div class="container-fluid">
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <div class="dropdown">

                                                        <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                            Show
                                                            <span class="caret"></span>
                                                        </button>

                                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/service/new">New Service</a></li>
                                                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/service/pending">Pending Services</a></li>
                                                        </ul>

                                                    </div>
                                                    <br>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <h5 class="title">Search by Service ID</h5>
                                                    <br>
                                                    <form action="/service/searchByServiceID" method="get">
                                                        <div class="form-group">
                                                          <input class="form-control" type="text" name="serviceID" placeholder="Service ID">
                                                        </div>
                                                        <div class="form-group">
                                                          <input class="btn btn-default" type="submit" value="Search">
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="col-md-6">
                                                    <h5 class="title">Search by Chassis Number</h5>
                                                    <br>
                                                    <form action="/service/searchByChassisNo" method="get">
                                                        <div class="form-group">
                                                          <input class="form-control" type="text" name="chassisNo" placeholder="Chassis No">
                                                        </div>
                                                        <div class="form-group">
                                                          <input class="btn btn-default" type="submit" value="Search">
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-md-12">
                                                    <ul role="tablist" class="nav nav-tabs">
                                                        <li role="presentation" class="active">
                                                            <a href="#all_services" data-toggle="tab">All Services</a>
                                                        </li>
                                                        <li>
                                                            <a href="#technician_services" data-toggle="tab">Technician Services</a>
                                                        </li>
                                                    </ul>
                                                    <div class="tab-content">
                                                        <div id="all_services" class="tab-pane active">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <div class="dropdown">
                                                                        <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                                            Show
                                                                            <span class="caret"></span>
                                                                        </button>

                                                                        <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/service/today">Today</a></li>
                                                                            <li role="presentation" class="divider"></li>
                                                                            <li role="presentation"><a role="menuitem" tabindex="-1" href="/service/all">All</a></li>
                                                                        </ul>
                                                                    </div>
                                                                    <br>
                                                                    <p class="title">Date Range</p>
                                                                    <p><i>From සහ To යන fields වලට දින ඇතුලත් කිරීමේදී <b>YYYY-MM-DD</b> යන ආකෘතිය අනුගමනය කරන්න.</i></p>
                                                                    <form action="/service/date" method="get">
                                                                        <div class="form-group">
                                                                            <b>From:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="startDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                            <b>To:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="endDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <input class="btn btn-primary" type="submit" value="List">
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div id="technician_services" class="tab-pane">
                                                            <div class="row">
                                                                <div class="col-md-6">
                                                                    <p class="title">Date Range</p>
                                                                    <p><i>From සහ To යන fields වලට දින ඇතුලත් කිරීමේදී <b>YYYY-MM-DD</b> යන ආකෘතිය අනුගමනය කරන්න.</i></p>
                                                                    <form action="/service/byofficer/date" method="get">
                                                                        <div class="form-group">
                                                                            <b>Technician:</b>
                                                                            <select class="form-control" name="technician">
                                                                                <% technicians.forEach(function(technician) { %>
                                                                                    <option value="<%= technician.id %>"><%= technician.name %></option>
                                                                                <% }) %>
                                                                            </select>
                                                                            <b>From:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="startDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                            <b>To:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="endDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                        </div>
                                                                        <div class="form-group">
                                                                            <input class="btn btn-primary" type="submit" value="List">
                                                                        </div>
                                                                    </form>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                        </div>



                    </div>
                </div>

                <% include ./layouts/pro/footer %>
            </div>
        </div>
    </body>
    <% include ./layouts/pro/includes %>
    <script type="text/javascript">
        $('.datetimepicker').datetimepicker({
            format: 'YYYY-MM-DD',
            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove'
            }
        });
    </script>
</html>
