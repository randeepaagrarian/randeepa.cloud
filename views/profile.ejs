<!DOCTYPE html>
<html>
    <head>
        <% include ./layouts/pro/head %>
    </head>
    <body>
        <div class="wrapper">
            <% include ./layouts/pro/sidebar %>
            <div class="main-panel">
                <% include ./layouts/pro/navbar %>

                <div class="main-content">
                    <div class="container-fluid">


                        <div class="row">


                            <div class="col-md-12">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Profile</h4>
                                    </div>
                                    <div class="content">
                                        <p><i>* Please use the date time picker when entering data to fields, <b>start date</b> and <b>end date</b>. If the date time picker is not available, please enter the date in the format, <b>YYYY-MM-DD</b></i></p>
                                        <form class="form-inline" action="/profile/view" method="get">
                                            <b>Officer:</b>&nbsp;&nbsp;&nbsp;&nbsp;<select class="form-control" name="userId">
                                                <% users.forEach(function(user) { %>
                                                    <option value="<%= user.username %>"><%= user.name %>&nbsp;&nbsp;&nbsp;&nbsp;&mdash;&nbsp;&nbsp;&nbsp;&nbsp;<%= user.region %>&nbsp;&nbsp;&nbsp;&nbsp;&mdash;&nbsp;&nbsp;&nbsp;&nbsp;<%= user.territory %></option>
                                                <% }) %>
                                            </select>
                                            <div style="display: inline-block;">&nbsp; &nbsp;</div>
                                            <b>Start Date:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="startDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                            <div style="display: inline-block;">&nbsp; &nbsp;</div>
                                            <b>End Date:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="endDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                            <div style="display: inline-block;">&nbsp; &nbsp;</div>
                                            <div class="form-group">
                                                <input class="btn btn-primary" type="submit" value="View">
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>



                    </div>
                </div>

                <% include ./layouts/pro/footer %>
            </div>
        </div>
    </body>
    <% include ./layouts/pro/includes %>
    <script type="text/javascript">
        $('.datetimepicker').datetimepicker({
            format: 'YYYY-MM-DD',
            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove'
            }
        });
    </script>
</html>
