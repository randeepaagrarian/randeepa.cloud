<!DOCTYPE html>
<html>
    <head>
        <% include ./layouts/pro/head %>
    </head>
    <body>
        <div class="wrapper">
            <% include ./layouts/pro/sidebar %>
            <div class="main-panel">
                <% include ./layouts/pro/navbar %>

                <div class="main-content">
                    <div class="container-fluid">


                        <div class="row">


                            <div class="col-md-3">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Routes</h4>
                                    </div>
                                    <div class="content">
                                        <div class="dropdown">

                                            <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                Show
                                                <span class="caret"></span>
                                            </button>

                                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/all">All</a></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/add">Add</a></li>
                                            </ul>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Drivers</h4>
                                    </div>
                                    <div class="content">
                                        <div class="dropdown">

                                            <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                Show
                                                <span class="caret"></span>
                                            </button>

                                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/driver/all">All</a></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/driver/add">Add</a></li>
                                            </ul>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Supporters</h4>
                                    </div>
                                    <div class="content">
                                        <div class="dropdown">

                                            <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                Show
                                                <span class="caret"></span>
                                            </button>

                                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/supporter/all">All</a></li>
                                                <li role="presentation" class="divider"></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/supporter/add">Add</a></li>
                                            </ul>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Invoices</h4>
                                    </div>
                                    <div class="content">
                                        <div class="dropdown">

                                            <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                Show
                                                <span class="caret"></span>
                                            </button>

                                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/invoice/all">View</a></li>
                                                <li role="presentation" class="divider"></li>
                                                <li role="presentation"><a role="menuitem" tabindex="-1" href="/routes/invoice/issue">Issue</a></li>
                                            </ul>

                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="card">
                                    <div class="header">
                                        <h4 class="title">Reports</h4>
                                    </div>
                                    <div class="container-fluid">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5 class="title">Vehicle Monthly Routes</h5>
                                                <div class="content">
                                                    <form action="/routes/monthly-routes/vehicle" method="get">
                    									<div class="form-group">
                    										<input class="form-control" type="text" name="vehicleid" placeholder="Vehicle Number">
                    										<br>
                    										<select class="form-control" name="year">
                                                                <option name="2017">2017</option>
                    											<option name="2018">2018</option>
                    										</select>
                    										<br>
                    										<select class="form-control" name="month">
                    											<% for(let i = 1; i <= 12; i++) { %>
                    												<option name="<%= i %>"><%= i %></option>
                    											<% } %>
                    										</select>
                    									</div>
                    									<div class="form-group">
                    										<input class="btn btn-default" type="submit" value="Calculate">
                    									</div>
                    								</form>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <h5 class="title">Driver Monthly Routes</h5>
                                                <div class="content">
                                                    <form action="/routes/monthly-routes/driver" method="get">
                    									<div class="form-group">
                    										<select class="form-control" name="driverid">
                    											<% drivers.forEach(function(driver) { %>
                    												<option value="<%= driver.id %>"><%= driver.first_name %> <%= driver.last_name %></option>
                    											<% }) %>
                    										</select>
                    										<br>
                    										<select class="form-control" name="year">
                                                                <option name="2017">2017</option>
                    											<option name="2018">2018</option>
                    										</select>
                    										<br>
                    										<select class="form-control" name="month">
                    											<% for(let i = 1; i <= 12; i++) { %>
                    												<option name="<%= i %>"><%= i %></option>
                    											<% } %>
                    										</select>
                    									</div>
                    									<div class="form-group">
                    										<input class="btn btn-default" type="submit" value="Calculate">
                    									</div>
                    								</form>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <h5 class="title">Supporter Monthly Routes</h5>
                                                <div class="content">
                                                    <form action="/routes/monthly-routes/supporter" method="get">
                    									<div class="form-group">
                    										<select class="form-control" name="supporterid">
                    											<% supporters.forEach(function(supporter) { %>
                    												<option value="<%= supporter.id %>"><%= supporter.first_name %> <%= supporter.last_name %></option>
                    											<% }) %>
                    										</select>
                    										<br>
                    										<select class="form-control" name="year">
                                                                <option name="2017">2017</option>
                    											<option name="2018">2018</option>
                    										</select>
                    										<br>
                    										<select class="form-control" name="month">
                    											<% for(let i = 1; i <= 12; i++) { %>
                    												<option name="<%= i %>"><%= i %></option>
                    											<% } %>
                    										</select>
                    									</div>
                    									<div class="form-group">
                    										<input class="btn btn-default" type="submit" value="Calculate">
                    									</div>
                    								</form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>



                    </div>
                </div>

                <% include ./layouts/pro/footer %>
            </div>
        </div>
    </body>
    <% include ./layouts/pro/includes %>
</html>
