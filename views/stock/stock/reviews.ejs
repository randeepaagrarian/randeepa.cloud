<!DOCTYPE html>
<html>
    <head>
        <% include ../../layouts/pro/head %>
    </head>
    <body>
        <div class="wrapper">
            <% include ../../layouts/pro/sidebar %>
            <div class="main-panel">
                <% include ../../layouts/pro/navbar %>

                <div class="main-content">
                    <div class="container-fluid">


                        <div class="row">

                            <div class="col-md-12">
                                <div class="card">
                                    <div class="header">
                                        Stock Reviews
                                    </div>
                                    <div class="content">
                                        <p>From : <%= from %> To: <%= to %></p>
                                        <div style="max-width: 100%; overflow: auto;" class="table-responsive">
                                            <table class="table table-striped">
                                                <thead>
                                                    <th>Id</th>
                                                    <th>Added</th>
                                                    <th>Dealer</th>
                                                    <th>User</th>
                                                    <th>Remark</th>
                                                    <th>Picture</th>
                                                    <th>Audited</th>
                                                </thead>
                                                <tbody>
                                                    <% stockReviews.forEach(function(stock) { %>
                                                        <% if(stock.audited == 1) { %>
                                                            <tr class="info">
                                                                <td><%= stock.id %></td>
                                                                <td><%= stock.created %></td>
                                                                <td><%= stock.dealer %></td>
                                                                <td><%= stock.user %></td>
                                                                <td><%= stock.remark %></td>
                                                                <td><a target="_blank" href="<%= stock.picture %>">Image</a></td>
                                                                <td>Yes</td>
                                                            </tr>
                                                        <% } else { %>
                                                            <tr>
                                                                <td><%= stock.id %></td>
                                                                <td><%= stock.created %></td>
                                                                <td><%= stock.dealer %></td>
                                                                <td><%= stock.user %></td>
                                                                <td><%= stock.remark %></td>
                                                                <td><a target="_blank" href="<%= stock.picture %>">Image</a></td>
                                                                <td><a href="/stock/markAudited?reviewId=<%= stock.id %>&continue=<%= url %>">Mark Audited</a></td>
                                                            </tr>
                                                        <% } %>
                                                    <% }) %>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>


                        </div>



                    </div>
                </div>

                <% include ../../layouts/pro/footer %>
            </div>
        </div>
    </body>
    <% include ../../layouts/pro/includes %>
</html>
