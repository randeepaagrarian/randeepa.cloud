<!DOCTYPE html>
<html>
    <head>
        <% include ./layouts/pro/head %>
    </head>
    <body>
        <div class="wrapper">
            <% include ./layouts/pro/sidebar %>
            <div class="main-panel">
                <% include ./layouts/pro/navbar %>

                <div class="main-content">
                    <div class="container-fluid">


                        <div class="row">


                            <% if(user.accessLevel.banking == 10) { %>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title">My Bankings</h4>
                                        </div>
                                        <div class="content">
                                            <div class="dropdown">

                                                <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                    Show
                                                    <span class="caret"></span>
                                                </button>

                                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/banking-m/myprofile/today">Today</a></li>
                                                    <li role="presentation" class="divider"></li>
                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/banking-m/myprofile/all">All</a></li>
                                                </ul>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <% if(user.accessLevel.banking == 9) { %>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title">My Area Profile</h4>
                                        </div>
                                        <div class="content">
                                            <div class="dropdown">

                                                <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                    Show
                                                    <span class="caret"></span>
                                                </button>

                                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/banking-a/areaprofile/today">Today</a></li>
                                                    <li role="presentation" class="divider"></li>
                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/banking-a/areaprofile/all">All</a></li>
                                                </ul>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                            <% if(user.accessLevel.banking == 8) { %>
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="header">
                                            <h4 class="title">Bankings</h4>
                                        </div>
                                        <div class="content">

                                            <ul role="tablist" class="nav nav-tabs">
                                                <li role="presentation" class="active">
                                                    <a href="#all_bankings" data-toggle="tab">All Bankings</a>
                                                </li>
                                                <li>
                                                    <a href="#regional_bankings" data-toggle="tab">Regional Bankings</a>
                                                </li>
                                                <li>
                                                    <a href="#officer_bankings" data-toggle="tab">Officer Bankings</a>
                                                </li>
                                            </ul>

                                            <div class="tab-content">
                                                <div id="all_bankings" class="tab-pane active">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <div class="dropdown">
                                                                <button class="btn dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown">
                                                                    Show
                                                                    <span class="caret"></span>
                                                                </button>

                                                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu1">
                                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/banking/today">Today</a></li>
                                                                    <li role="presentation" class="divider"></li>
                                                                    <li role="presentation"><a role="menuitem" tabindex="-1" href="/banking/all">All</a></li>
                                                                </ul>
                                                            </div>
                                                            <br>
                                                            <p class="title">Date Range</p>
                                                            <p><i>From සහ To යන fields වලට දින ඇතුලත් කිරීමේදී <b>YYYY-MM-DD</b> යන ආකෘතිය අනුගමනය කරන්න.</i></p>
                                                            <form action="/banking/date" method="get">
                            									<div class="form-group">
                                                                    <b>From:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="startDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                    <b>To:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="endDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                            									</div>
                            									<div class="form-group">
                            										<input class="btn btn-primary" type="submit" value="List">
                            									</div>
                            								</form>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="regional_bankings" class="tab-pane">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <p class="title">Date Range</p>
                                                            <p><i>From සහ To යන fields වලට දින ඇතුලත් කිරීමේදී <b>YYYY-MM-DD</b> යන ආකෘතිය අනුගමනය කරන්න.</i></p>
                                                            <form action="/banking/byregion/date" method="get">
                            									<div class="form-group">
                                                                    <b>Region:</b>
                                                                    <select class="form-control" name="region">
                                                                        <% regions.forEach(function(region) { %>
                                                                            <option value="<%= region.id %>"><%= region.name %></option>
                                                                        <% }) %>
                                                                    </select>
                                                                    <b>From:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="startDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                    <b>To:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="endDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                            									</div>
                            									<div class="form-group">
                            										<input class="btn btn-primary" type="submit" value="List">
                            									</div>
                            								</form>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div id="officer_bankings" class="tab-pane">
                                                    <div class="row">
                                                        <div class="col-md-6">
                                                            <p class="title">Date Range</p>
                                                            <p><i>From සහ To යන fields වලට දින ඇතුලත් කිරීමේදී <b>YYYY-MM-DD</b> යන ආකෘතිය අනුගමනය කරන්න.</i></p>
                                                            <form action="/banking/byofficer/date" method="get">
                            									<div class="form-group">
                                                                    <b>Officer:</b>
                                                                    <select class="form-control" name="officer">
                                                                        <% users.forEach(function(user) { %>
                                                                            <option value="<%= user.id %>"><%= user.name %></option>
                                                                        <% }) %>
                                                                    </select>
                                                                    <b>From:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="startDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                                                                    <b>To:</b>&nbsp;&nbsp;&nbsp;&nbsp;<input type="text" name="endDate" class="form-control datetimepicker" placeholder="YYYY-MM-DD" />
                            									</div>
                            									<div class="form-group">
                            										<input class="btn btn-primary" type="submit" value="List">
                            									</div>
                            								</form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% } %>

                        </div>



                    </div>
                </div>

                <% include ./layouts/pro/footer %>
            </div>
        </div>
    </body>
    <% include ./layouts/pro/includes %>
    <script type="text/javascript">
        $('.datetimepicker').datetimepicker({
            format: 'YYYY-MM-DD',
            icons: {
                time: "fa fa-clock-o",
                date: "fa fa-calendar",
                up: "fa fa-chevron-up",
                down: "fa fa-chevron-down",
                previous: 'fa fa-chevron-left',
                next: 'fa fa-chevron-right',
                today: 'fa fa-screenshot',
                clear: 'fa fa-trash',
                close: 'fa fa-remove'
            }
        });
    </script>
</html>
