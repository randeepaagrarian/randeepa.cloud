<div class="container">
    <div class="header clearfix">
        <nav>
            <ul class="nav nav-pills pull-right">
                <% if(typeof user != 'undefined') { %>
                    <li role="presentation" class="<%= title == 'Dashboard' ? 'active' : '' %>">
                        <a href="/">Dashboard</a>
                    </li>
                    <li role="presentation">
                        <a href="#">Hello, <%= user.name %></a>
                    </li>
                    <li role="presentation">
                        <a href="/signout">Sign out</a>
                    </li>
                <% } else { %>
                    <li role="presentation" class="<%= title == 'Sign in' ? 'active' : '' %>">
                        <a href="/signin">Sign in</a>
                    </li>
                <% } %>
            </ul>
        </nav>
        <h3 class="text-muted">
            <img src="/img/R-Logo-RGB.png" style="width: 50px;">
        </h3>
    </div>
</div>
